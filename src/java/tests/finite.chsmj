%%

// Tests that we don't cycle forever.

chsm<Test> finite_chsm is {
    state a {
        beta -> b %{ alpha(); %};
    }
    state b {
        alpha -> a %{ beta(); %};
    }
}

%%

class finite {
    public static void main( String args[] ) {
        finite_chsm m = new finite_chsm();
        m.enter();
        m.beta();

        if ( !( m.active() &&
            !m.a.active() && m.b.active()
        ) )
            Test.exitCode = 1;

        Test.printResult();
    }
}
