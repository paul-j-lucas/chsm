%%

// Tests that derived events dominate in the same scope regardless of
// specification order.

chsm<Test> events5_machine is {
    event alpha;
    event<alpha> beta;

    state a {
        alpha -> b;
    }
    state b;
}

%%

class events5 {
    public static void main( String args[] ) {
        events5_machine m = new events5_machine();
        m.enter();
        m.beta();

        if ( !( m.active() &&
            !m.a.active() && m.b.active()
        ) )
            Test.exitCode = 1;

        Test.printResult();
    }
}
