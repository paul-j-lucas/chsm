#include <iostream>
using namespace std;

int exit_code = 0;

%%

// Test the "history" feature on CHSMs.

chsm my_machine is {
    state a {
        alpha -> c.j.y;
        gamma -> c;
    }
    cluster c(i,j) deep history {
        beta -> a;
    } is {
        state i;
        cluster j(x,y) is {
            state x;
            state y;
        }
    }
}

%%

int main() {
    my_machine m;
    m.enter();

#ifdef DEBUG
    m.debug( CHSM::machine::D_all );
#endif

    m.alpha();
    m.beta();
    m.gamma();

#ifdef DEBUG
    m.dump_state();
#endif

    if ( !( m.active() &&
        !m.a.active() && m.c.active() &&
        !m.c.i.active() && m.c.j.active() &&
        !m.c.j.x.active() && m.c.j.y.active()
    ) )
        exit_code = 1;

    cout << (exit_code ? "INCORRECT" : "correct") << endl;
    return exit_code;
}
