#include <iostream>
using namespace std;

int exit_code = 0;

// Tests dominance of earlier transition over later.

%%

chsm my_machine is {
    state a {
        alpha -> b;
        alpha -> c;             // this transition should not be taken
    }
    state b {
        alpha[ false ] -> c;    // this transition should not be taken
        alpha -> d;
    }
    state c;
    state d;
}

%%

int main() {
    my_machine m;
    m.enter();

#ifdef DEBUG
    m.debug( CHSM::machine::D_all );
#endif

    m.alpha();
    m.alpha();

#ifdef DEBUG
    m.dump_state();
#endif

    if ( !( m.active() &&
        !m.a.active() && !m.b.active() && !m.c.active() && m.d.active()
    ) )
        exit_code = 1;

    cout << (exit_code ? "INCORRECT" : "correct") << endl;
    return exit_code;
}
