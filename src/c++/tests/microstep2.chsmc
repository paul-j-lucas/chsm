#include <iostream>
using namespace std;

int exit_code = 0;

%%

// Tests micro-step algorithm.

chsm my_machine is {
    set s(x,y) is {
        cluster x(a,b) is {
            state a {
                beta -> b;
            }
            state b {
                alpha -> a;
            }
        }
        cluster y(c,d) is {
            state c {
                exit(x.a) -> d;
            }
            state d {
                enter(x.b) -> c;
            }
        }
    }
}

%%

int main() {
    my_machine m;
    m.enter();

#ifdef DEBUG
    m.debug( CHSM::machine::D_all );
#endif

    m.beta();

#ifdef DEBUG
    m.dump_state();
#endif

    if ( !( m.active() &&
        m.s.x.active() && !m.s.x.a.active() && m.s.x.b.active() &&
        m.s.y.active() && !m.s.y.c.active() && m.s.y.d.active()
    ) )
        exit_code = 1;

    cout << (exit_code ? "INCORRECT" : "correct") << endl;
    return exit_code;
}
