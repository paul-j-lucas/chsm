#include <iostream>
using namespace std;

int exit_code = 1;

%%

// Tests that enter/exit code works.

chsm my_machine {
    upon enter %{                   // 1
        exit_code *= 2;
    %}
    upon exit %{                    // 6
        exit_code *= 2;
    %}
} is {
    cluster c(x) {
        upon enter %{               // 2
            exit_code *= 2;
        %}
        upon exit %{                // 5
            exit_code *= 2;
        %}
    } is {
        state x {
            upon enter %{           // 3
                exit_code *= 2;
            %}
            upon exit %{            // 4
                exit_code *= 2;
            %}
        }
    }
}

%%

int main() {
    my_machine m;

#ifdef DEBUG
    m.debug( CHSM::machine::D_all );
#endif

    m.enter();
    m.exit();

    exit_code -= 64;

    cout << (exit_code ? "INCORRECT" : "correct") << endl;
    return exit_code;
}
