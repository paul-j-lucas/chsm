#include <iostream>
using namespace std;

int exit_code = 0;

// Tests dominance of outer transition over inner.

%%

chsm my_machine is {
    cluster c(a,b) {
        alpha -> x;             // this transition should dominate
    } is {
        state a {
            alpha -> b;         // this transition should not be taken
        }
        state b;
    }
    state x;
}

%%

int main() {
    my_machine m;
    m.enter();

#ifdef DEBUG
    m.debug( CHSM::machine::D_all );
#endif

    m.alpha();

#ifdef DEBUG
    m.dump_state();
#endif

    if ( !( m.active() &&
        m.x.active() && !m.c.active() && !m.c.a.active() && !m.c.b.active()
    ) )
        exit_code = 1;

    cout << (exit_code ? "INCORRECT" : "correct") << endl;
    return exit_code;
}
