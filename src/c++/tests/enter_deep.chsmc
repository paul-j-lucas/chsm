#include <iostream>
using namespace std;

int exit_code = 0;

%%

// Tests that entering a state nested deeply in a cluster directly really
// enters that state.

chsm my_machine is {
    state a {
        alpha -> x.y.c;
    }
    cluster x(a,y) is {
        state a;
        cluster y(b,c) is {
            state b;
            state c;
        }
    }
}

%%

int main() {
    my_machine m;
    m.enter();

#ifdef DEBUG
    m.debug( CHSM::machine::D_all );
#endif

    m.alpha();

#ifdef DEBUG
    m.dump_state();
#endif

    if ( !( m.active() &&
        !m.a.active() && m.x.active() && m.x.y.active() && m.x.y.c.active()
    ) )
        exit_code = 1;

    cout << (exit_code ? "INCORRECT" : "correct") << endl;
    return exit_code;
}
