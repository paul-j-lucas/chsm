#include <iostream>
using namespace std;

int exit_code = 0;

%%

// Tests that only one nondeterministic transition is taken.

chsm my_machine is {
    state x {
        alpha -> y;
        alpha -> z;
    }
    state y;
    state z;
}

%%

int main() {
    my_machine m;
    m.enter();

#ifdef DEBUG
    m.debug( CHSM::machine::D_all );
#endif

    m.alpha();

#ifdef DEBUG
    m.dump_state();
#endif

    if ( !( m.active() &&
        !m.x.active() && m.y.active() && !m.z.active()
    ) )
        exit_code = 1;

    cout << (exit_code ? "INCORRECT" : "correct") << endl;
    return exit_code;
}
