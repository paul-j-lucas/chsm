#include <iostream>
using namespace std;

int exit_code = 0;

%%

// Tests that erroneous transitions do not violate CHSM outer scope semantics
// (which are the same as a cluster's).

chsm my_machine is {
    set s(a,b) is {
        state a {
            alpha -> x;
        }
        state b {
            alpha -> y %{       // this action should not be performed
                exit_code = 2;
            %};
        }
    }
    state x;
    state y;
}

%%

int main() {
    my_machine m;
    m.enter();

#ifdef DEBUG
    m.debug( CHSM::machine::D_all );
#endif

    m.alpha();

#ifdef DEBUG
    m.dump_state();
#endif

    if ( !( m.active() &&
        !m.s.active() && !m.s.a.active() && !m.s.b.active() &&
        m.x.active() && !m.y.active()
    ) )
        exit_code = 1;

    cout << (exit_code ? "INCORRECT" : "correct") << endl;
    return exit_code;
}
