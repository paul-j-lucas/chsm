#include <iostream>
using namespace std;

int exit_code = 0;

%%

// Tests that derived events dominate in the same scope regardless of
// specification order.

chsm my_machine is {
    event alpha;
    event<alpha> beta;

    set s(c,d) is {
        cluster c(x,a,b) is {
            state x {
                alpha -> a;
                beta -> b;
            }
            state a;
            state b;
        }
        cluster d(x,a,b) is {
            state x {
                beta -> b;  // transition order flipped
                alpha -> a;
            }
            state a;
            state b;
        }
    }
}

%%

int main() {
    my_machine m;
    m.enter();

#ifdef DEBUG
    m.debug( CHSM::machine::D_all );
#endif

    m.beta();

#ifdef DEBUG
    m.dump_state();
#endif

    if ( !( m.active() &&
        m.s.active() && m.s.c.active() && m.s.d.active() &&
        !m.s.c.x.active() && !m.s.c.a.active() && m.s.c.b.active() &&
        !m.s.d.x.active() && !m.s.d.a.active() && m.s.d.b.active()
    ) )
        exit_code = 1;

    cout << (exit_code ? "INCORRECT" : "correct") << endl;
    return exit_code;
}
