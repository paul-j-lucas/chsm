#include <iostream>
using namespace std;

%%

chsm my_machine is {
    cluster c(a) {
        alpha %{
            cout << "c" << endl;
        %};
    } is {
        state a {
            alpha %{
                cout << "c.a" << endl;
            %};
        }
    }
}

%%

int main() {
    my_machine m;
    m.enter();

#ifdef DEBUG
    m.debug( CHSM::machine::D_all );
#endif

    m.alpha();

#ifdef DEBUG
    m.dump_state();
#endif
}
