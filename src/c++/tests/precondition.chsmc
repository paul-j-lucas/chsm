#include <iostream>
using namespace std;

int exit_code = 1;
int g;

%%

// Tests preconditions

chsm my_machine is {
    event A;
    event B             [ g > 0 ];

    event<A> C          [ g > 0 ];
    event<A> D( int w ) [ w > 0 ];

    event<B> E;
    event<B> F( int x ) [ x > 0 ];

    event<E> G;
    event<E> H( int y ) [ y > 0 ];

    event<F> I;
    event<F> J( int z ) %{ return z > 0; %};

    state a { B -> b; }
    state b { I, J -> c; }
    state c;
}

%%

int main() {
    my_machine m;
    m.enter();

#ifdef DEBUG
    m.debug( CHSM::machine::D_all );
#endif

    g = 0; m.B();
    if ( m.b.active() )
        goto failed;

    g = 1; m.B();
    if ( !m.b.active() )
        goto failed;

    m.I( 0 );
    if ( m.c.active() )
        goto failed;

    m.J( 1, 1 );
    if ( !m.c.active() )
        goto failed;

    exit_code = 0;

failed:
    cout << (exit_code ? "INCORRECT" : "correct") << endl;
    return exit_code;
}
