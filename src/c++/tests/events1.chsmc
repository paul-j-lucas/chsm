#include <iostream>
using namespace std;

int exit_code = 0;
int const test_value = 42;

%%

// Tests that transitions are inherited properly and that parameter blocks are
// set properly for derived events.

chsm my_machine is {
    event alpha( int value );
    event<alpha> beta;

    set s(p,q) is {
        cluster p(a,b) is {
            state a {
                beta[ false ] -> b;
            }
            state b;
        }
        cluster q(a,b) is {
            state a {
                alpha -> b %{
                    if ( alpha->value != test_value )
                        exit_code = 2;
                %};
            }
            state b;
        }
    }
}

%%

int main() {
    my_machine m;
    m.enter();

#ifdef DEBUG
    m.debug( CHSM::machine::D_all );
#endif

    m.beta( test_value );

#ifdef DEBUG
    m.dump_state();
#endif

    if ( !( m.active() &&
        m.s.active() &&
        m.s.p.active() && m.s.p.a.active() && !m.s.p.b.active() &&
        m.s.q.active() && !m.s.q.a.active() && m.s.q.b.active()
    ) )
        exit_code = 1;

    cout << (exit_code ? "INCORRECT" : "correct") << endl;
    return exit_code;
}
