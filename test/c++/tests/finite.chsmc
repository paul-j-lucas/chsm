/**
 * @file
 * Tests that we don't cycle forever.
 */

// local
#include "chsm_cxx_test.h"

// standard
#include <iostream>
using namespace std;

static int exit_code = 0;

%%
///////////////////////////////////////////////////////////////////////////////

chsm my_machine is {
  state a {
    beta -> b %{ alpha(); %};
  }
  state b {
    alpha -> a %{ beta(); %};
  }
}

///////////////////////////////////////////////////////////////////////////////
%%

int main() {
  my_machine m;
  m.enter();

#ifdef DEBUG
  m.debug( CHSM::machine::DEBUG_ALL );
#endif

  m.beta();

#ifdef DEBUG
  m.dump_state();
#endif

  CHSM_TEST( m.active() &&
    !m.a.active() && m.b.active()
  );

  PRINT_RESULT();
}

