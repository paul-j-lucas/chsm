/**
 * @file
 * Tests computed targets.
 */

%%
///////////////////////////////////////////////////////////////////////////////

chsm<Test> target1_chsm is {
  state a {
    alpha -> [ b ];
  }
  state b;
}

///////////////////////////////////////////////////////////////////////////////
%%

class target1 {
  public static void main( String args[] ) {
    target1_chsm m = new target1_chsm();
    m.enter();
    m.alpha();

    if ( !( m.active() &&
            !m.a.active() && m.b.active()
    ) )
      Test.exitCode = 1;

    Test.printResult();
  }
}

